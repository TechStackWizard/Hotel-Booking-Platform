<% layout('/layouts/boilerplate') %>

    <div class="row">
        <form style="height: 80vh; display: flex; flex-direction: column; justify-content: center; align-items: center;"
            method="post" action="/signup" class="needs-validation" novalidate>
            <h3 class="mb-3 col-8 fw-bolder">SignUp on HavelyGo</h3>
            <div class="mb-3 col-8">
                <div class="mb-3">
                    <label for="username" class="form-label">Username </label>
                    <input type="text" name="username" placeholder="Enter username" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email </label>
                    <input type="email" name="email" placeholder="Enter email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password </label>
                    <input type="password" name="password" placeholder="Enter password" class="form-control" required>
                </div>
                <button class="btn btn-success">Sign Up </button>

            </div>
        </form>

    </div>
